<p id="notice"><%= notice %></p>

<h1>Select dishes for menu "<%= @menu.name %>"</h1>

<table>
  <thead>
  <tr>
    <th></th>
    <th>Categiry</th>
    <th>Name</th>
    <th>Description</th>
    <th>Price</th>
  </tr>
  </thead>

  <tbody>
    <%= form_tag(controller: 'menus', action: 'compose') do %>
      <% @dishes.each do |dish| %>
        <tr>
          <td><%= check_box_tag 'dish_ids[]', dish.id, dish.menus.exists?(@menu) %></td>
          <td><%= dish.category.name %></td>
          <td><%= dish.name %></td>
          <td><%= dish.description %></td>
          <td><%= dish.price %></td>
        </tr>
      <% end %>
      <%= submit_tag("Save") %>
    <% end %>
  </tbody>
</table>


