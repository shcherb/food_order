<p id="notice"><%= notice %></p>

<h1>Select dishes for menu "<%= @menu.name %>"</h1>

<table>
  <thead>
  <tr>
    <th>Categiry</th>
    <th>Name</th>
    <th>Description</th>
    <th>Price</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <%= form_tag("/compose", method: "post") do %>
    <tbody>
    <% @dishes.each do |dish| %>
      <tr>
        <td><%= dish.category.name %></td>
        <td><%= dish.name %></td>
        <td><%= dish.description %></td>
        <td><%= dish.price %></td>
        <td><%= check_box_tag 'dish_ids[]', dish.id %></td>
      </tr>
    <% end %>
    </tbody>
    <%= submit_tag("Save") %>
  <% end %>
</table>

<br>

<%= link_to 'New Dish', new_dish_path %>
