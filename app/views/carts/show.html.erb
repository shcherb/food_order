<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>

<p id="notice"><%= notice %></p>


<%= form_tag(confirm_cart_path(@cart), method: :confirm, data: { confirm: 'Are you sure?' }) do %>
  <div><%= label_tag(:phone, "Your phone:")%>
       <%= phone_field_tag(:phone)%></div>
  <div><%= label_tag(:email, "Your email:")%>
       <%= email_field_tag(:email)%></div>
  <div><%= submit_tag("Send order") %></div>
  <% end %>
<p><%= button_to 'Back to order', order_path, method: :get %></p>

<h1>Please, check your order: </h1>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Price</th>
    <th>Count</th>
    <th>Sum</th>
  </tr>
  </thead>

  <tbody>
  <% @cart.dishes.each do |dish|%>
      <tr>
        <td><%= dish.name %></td>
        <td><%= dish.price %></td>
        <td><%= dish_count(dish.id) %></td>
        <td><%= dish_sum(dish) %></td>
      </tr>
  <% end %>
  </tbody>
</table>